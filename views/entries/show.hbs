<h1>{{entry.title}}</h1>

<span class="entry-date block font-3-4 c-lt-gray">Written on {{entry.createdAt}}</span>
<p>{{entry.body}}</p>

<ul id="editAndDeleteUl" class="no-bullets no-padding mar-t-2">
  <li class="pipe-separate left">
    <a href="/entries/{{ entry.id }}/edit" class="c-white">edit</a>
  </li>

  <li class="pipe-separate left">
    <button id="deleteEntryButton" data-entryid="{{entry.id}}" value="delete"
      class="no-border no-outline no-bg c-white hover-underline">delete</button>
  </li>
</ul>